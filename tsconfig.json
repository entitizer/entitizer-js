{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "./src",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "files": [
        "src/index.ts"
    ]
}